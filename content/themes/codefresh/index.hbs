{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="hero-wrapper">
    <div class="hero-background" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
        <div class="hero">
            <div class="container">
                <div class="row">
                    <div class="col-md-offset-2 col-md-5">
                        <h1>{{@blog.title}}</h1>
                        <h2>{{@blog.description}}</h2>
                        <a href="#" class="btn btn-primary btn-lg js-show-signup">Sign up now for free</a>

                        {{> form.signup}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{! The main content area on the homepage }}
<main id="content" class="content container" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> loop}}

</main>
